@model IEnumerable<Project.Models.Challenge>

@{
    ViewData["Title"] = "Главная";
    Layout = "_Layout";
}


<section>
    <div class="m-2">
        <h4>Задания сообщества</h4>
    </div>
    <section>
        @foreach (var item in Model)
        {
            <div class="col-12 mt-2 mb-3 rounded challenge__card d-flex bg-light bg-switcher">
                <div class="col-6">
                    <div class="pt-2 pb-0">
                        <h5>
                            @item.Name<span class="m-2 special_word">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="18"
                                     height="18"
                                     fill="currentColor"
                                     class="bi bi-bookmark-fill"
                                     viewBox="0 0 16 16">
                                    <path d="M2 2v13.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2z" />
                                </svg>
                                <small>@item.Level.Name</small>
                            </span>
                        </h5>
                        <div class="p-1 bg-white rounded challenge_description border-bottom border-left">
                            <p class="mb-0">
                                @item.Description
                            </p>
                        </div>

                        <p class="pt-0 d-flex mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="20"
                                 height="20"
                                 fill="currentColor"
                                 class="mt-2 bi bi-tag"
                                 viewBox="0 0 16 16">
                                <path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z" />
                                <path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z" />
                            </svg>
                            <span class="m-1 text-muted">
                                @foreach (var tag in item.Tags)
                                {
                                    <span>@tag.Name</span>
                                }
                            </span>
                        </p>
                        <div class="d-flex col-12 p-0 m-0 flex-wrap">
                            @foreach (var test in item.Tests)
                            {
                                <button class="btn btn-dark m-1">Выполнить @test.ProgLanguage.Name</button>
                            }
                        <div class="d-flex m-2">
                            <span class="m-1">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="22"
                                     height="22"
                                     fill="currentColor"
                                     class="bi bi-hand-thumbs-up"
                                     viewBox="0 0 16 16">
                                    <path d="M8.864.046C7.908-.193 7.02.53 6.956 1.466c-.072 1.051-.23 2.016-.428 2.59-.125.36-.479 1.013-1.04 1.639-.557.623-1.282 1.178-2.131 1.41C2.685 7.288 2 7.87 2 8.72v4.001c0 .845.682 1.464 1.448 1.545 1.07.114 1.564.415 2.068.723l.048.03c.272.165.578.348.97.484.397.136.861.217 1.466.217h3.5c.937 0 1.599-.477 1.934-1.064a1.86 1.86 0 0 0 .254-.912c0-.152-.023-.312-.077-.464.201-.263.38-.578.488-.901.11-.33.172-.762.004-1.149.069-.13.12-.269.159-.403.077-.27.113-.568.113-.857 0-.288-.036-.585-.113-.856a2.144 2.144 0 0 0-.138-.362 1.9 1.9 0 0 0 .234-1.734c-.206-.592-.682-1.1-1.2-1.272-.847-.282-1.803-.276-2.516-.211a9.84 9.84 0 0 0-.443.05 9.365 9.365 0 0 0-.062-4.509A1.38 1.38 0 0 0 9.125.111L8.864.046zM11.5 14.721H8c-.51 0-.863-.069-1.14-.164-.281-.097-.506-.228-.776-.393l-.04-.024c-.555-.339-1.198-.731-2.49-.868-.333-.036-.554-.29-.554-.55V8.72c0-.254.226-.543.62-.65 1.095-.3 1.977-.996 2.614-1.708.635-.71 1.064-1.475 1.238-1.978.243-.7.407-1.768.482-2.85.025-.362.36-.594.667-.518l.262.066c.16.04.258.143.288.255a8.34 8.34 0 0 1-.145 4.725.5.5 0 0 0 .595.644l.003-.001.014-.003.058-.014a8.908 8.908 0 0 1 1.036-.157c.663-.06 1.457-.054 2.11.164.175.058.45.3.57.65.107.308.087.67-.266 1.022l-.353.353.353.354c.043.043.105.141.154.315.048.167.075.37.075.581 0 .212-.027.414-.075.582-.05.174-.111.272-.154.315l-.353.353.353.354c.047.047.109.177.005.488a2.224 2.224 0 0 1-.505.805l-.353.353.353.354c.006.005.041.05.041.17a.866.866 0 0 1-.121.416c-.165.288-.503.56-1.066.56z" />
                                </svg>
                                @item.Likes.Count()
                            </span>
                            <span class="m-1">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="22"
                                     height="22"
                                     fill="currentColor"
                                     class="bi bi-unlock-fill"
                                     viewBox="0 0 16 16">
                                    <path d="M11 1a2 2 0 0 0-2 2v4a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V9a2 2 0 0 1 2-2h5V3a3 3 0 0 1 6 0v4a.5.5 0 0 1-1 0V3a2 2 0 0 0-2-2z" />
                                </svg>
                                @item.UsersWhoUnlocked.Count()
                            </span>
                            <span class="m-1">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="22"
                                     height="22"
                                     fill="currentColor"
                                     class="bi bi-braces"
                                     viewBox="0 0 16 16">
                                    <path d="M2.114 8.063V7.9c1.005-.102 1.497-.615 1.497-1.6V4.503c0-1.094.39-1.538 1.354-1.538h.273V2h-.376C3.25 2 2.49 2.759 2.49 4.352v1.524c0 1.094-.376 1.456-1.49 1.456v1.299c1.114 0 1.49.362 1.49 1.456v1.524c0 1.593.759 2.352 2.372 2.352h.376v-.964h-.273c-.964 0-1.354-.444-1.354-1.538V9.663c0-.984-.492-1.497-1.497-1.6zM13.886 7.9v.163c-1.005.103-1.497.616-1.497 1.6v1.798c0 1.094-.39 1.538-1.354 1.538h-.273v.964h.376c1.613 0 2.372-.759 2.372-2.352v-1.524c0-1.094.376-1.456 1.49-1.456V7.332c-1.114 0-1.49-.362-1.49-1.456V4.352C13.51 2.759 12.75 2 11.138 2h-.376v.964h.273c.964 0 1.354.444 1.354 1.538V6.3c0 .984.492 1.497 1.497 1.6z" />
                                </svg>
                                @item.Solutions.Count()
                            </span>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12 text-right p-2">
                        <span class="special_word">Python</span>
                    </div>
                    <div class="testCodeWrapper mt-1 border col-12">
                        <pre data-enlighter-language="less"
                             class="pb-0 mb-0 position-absolute">
@item.Tests.First().TestContent
          </pre>
                    </div>
                    <div class="d-flex pt-2 justify-content-between">
                        <span><span class="special_word">123 exp</span> за решение</span>
                        <div>
                            <span>
                                @item.Author.Username
                                <span class="text-muted">@item.DateCreated.ToShortDateString()</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
</section>
<section>
    <div class="m-2">
        <h4>Обсуждения сообщества</h4>
    </div>
</section>
    
@section scripts {
    <script type="text/javascript" src="~/dist/enlighterjs.min.js"></script>
    <script type="text/javascript">
            // INIT CODE - simple page-wide initialization based on css selectors
            // - highlight all pre + code tags (CSS3 selectors)
            // - use javascript as default language
            // - use theme "enlighter" as default theme
            // - replace tabs with 2 spaces
            EnlighterJS.init("pre", "code", {
                language: "python",
                theme: "bootstrap4",
                indent: 2
            });
    </script>
}