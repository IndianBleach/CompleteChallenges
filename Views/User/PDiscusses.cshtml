@model Project.Models.User

@{
    ViewData["Title"] = "Обсуждения";
    Layout = "ProfileLayout";
}

<div class="col-10 p-3 mt-5 bg-light border rounded">
    @if (Model.MyDiscusses.Count <= 0)
    {
        <div class="col-12 text-center">
            <h4 class="tbig">Здесь пусто</h4>
            <p class="tsmall text-secondary">@Model.Username пока не имеет собственных обсуждений</p>
        </div>
    }
    @foreach (var item in Model.MyDiscusses)
    {
        <div class="col-12 mb-3 border bg-white rounded">
            <div class="pt-2 ps-2 pe-2">
                <div class="col-12 d-flex justify-content-between">
                    <h4 class="tbig mb-1">@item.Name</h4>
                    <p class="mb-0 tsmall text-primary">@item.Author.Username</p>
                </div>
                <p class="mb-0 ps-2 tsmall text-secondary">
                    @item.Content
                </p>
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <p class="tbg-desc tsmall ps-2 pt-2">
                        <span>
                            <svg data-toggle="tooltip" data-placement="bottom" title="Ответов" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-chat-right" viewBox="0 0 16 16">
                                <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12z" />
                            </svg>
                            <span class="ps-1">@item.Replies.Count()</span>
                        </span>
                        <span class="ms-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-tag" viewBox="0 0 16 16">
                                <path d="M6 4.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm-1 0a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0z" />
                                <path d="M2 1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 1 6.586V2a1 1 0 0 1 1-1zm0 5.586 7 7L13.586 9l-7-7H2v4.586z" />
                            </svg>
                            <span class="ps-1 tverysmall">массивы</span>
                        </span>
                    </p>
                    <button class=" mb-1 btn btn-action">Обсудить</button>
                </div>
            </div>
        </div>
    }
</div>
@section scripts {
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}