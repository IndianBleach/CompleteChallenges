@model Project.Models.Discuss

@{
    Layout = "MainLayout";
}

<section>
    <div class="col-10">
        <h4>@Model.Name</h4>
        <p>
            @Model.Content
        </p>
    </div>
    <div class="mb-4">
        <div class="col-12 mb-4">
            <form class="col-10 d-flex" asp-action="addReply" asp-controller="discuss">
                <input hidden name="discussId" value="@Model.Id"/>
                <textarea name="replyContent"
                          noresize
                          rows="3"
                          class="form-control form-control-sm"></textarea>
                <div class="p-3">
                    <button class="btn btn-success" type="submit">
                        Ответить
                    </button>
                </div>
            </form>
        </div>
        <h4>Последние ответы</h4>
        <div class="p-3 border rounded">
            <div class="col-12 d-flex justify-content-around"></div>
            <!---->
            @await Component.InvokeAsync("ReplyList") 
            <!---->
            <div class="col-12 d-flex justify-content-between">
                <div class="btn-group mr-2"
                     role="group"
                     aria-label="First group">
                    <button type="button" class="btn btn-light">1</button>
                    <button type="button" disabled class="btn btn-light">
                        2
                    </button>
                    <button type="button" class="btn btn-light">3</button>
                </div>
            </div>
        </div>
    </div>
</section>