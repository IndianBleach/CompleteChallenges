@model IEnumerable<Project.Models.User>

@{
    Layout = "MainLayout";
}

<section>
    <div class="mb-4">
        <div class="d-flex col-12 align-items-center">
            <h4 class="mb-1 me-4">Таблица лидеров</h4>
        </div>
        <div class="p-3 border rounded">
            <div class="col-12 d-flex justify-content-around">
                <form asp-action="search" asp-controller="leaderboard" class="d-flex col-10 col-md-6 mb-2">
                    <input name="searchQuery" class="form-control form-control-sm"
                           placeholder="Найти пользователя по имени" />
                    <button type="submit" class="btn btn-light">Поиск</button>
                </form>
            </div>
            <hr class="m-0 mb-2" />
            <!---->
            @{
                int i = 1;
                foreach (var item in Model)
                {
                        <div class="col-10 border p-3 rounded mb-2 d-flex flex-wrap">
                            <p class="bold-mark mb-0 me-3"><b># @i</b> @item.Username</p>
                            @if (!string.IsNullOrEmpty(item.GitHubLink))
                            {
                                <a href="@item.GitHubLink" class="bold-mark mb-0 me-3">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         width="16"
                                         height="16"
                                         fill="dark"
                                         class="bi bi-github"
                                         viewBox="0 0 16 16">
                                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
                                    </svg>
                                    GitHub
                                </a>
                            }
                            <p class="bold-mark mb-0 me-3">Exp: @item.Score</p>
                            <p class="bold-mark text-muted mb-0 me-3">
                                Создано заданий: @item.MyChallenges.Count()
                            </p>
                            <p class="bold-mark text-secondary mb-0 me-3">Решений: @item.MySolutions.Count()</p>
                            <p class="bold-mark text-secondary mb-0 me-3">
                                Обсуждений: @item.MyDiscusses.Count()
                            </p>
                        </div>
                    i++;
                }
            }
            <!---->
        </div>
    </div>
</section>