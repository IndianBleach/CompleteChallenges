@model IEnumerable<Project.Models.User>

@{
    Layout = "_Layout";
}

<div class="bg-white p-2 col-12">
    <div class="col-12 m-2  border rounded">
        <div class="col-12 text-center pt-4">
            <h4 class="tbig">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-trophy-fill" viewBox="0 0 16 16">
                    <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5c0 .538-.012 1.05-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33.076 33.076 0 0 1 2.5.5zm.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935zm10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935z" />
                </svg>
                Топ лидеров
            </h4>
            <p class="tsmall">Список из 50 пользователей, которые внесли наиболее высокий вклад в создание и решение заданий</p>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <div class="container justify-content-center m-2 pt-4 bg-light border rounded">
                <div class="col-12 d-flex justify-content-center mb-4">
                    <div class="col-10 col-md-8">
                        <form class="col-12 d-flex">
                            <input class="form-control form-control-sm" placeholder="Найти пользователя по имени">
                            <button class="ms-1 d-flex btn btn-submit">
                                Поиск
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="mt-1 ms-1 bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-12 p-2 mb-2 bg-white border rounded justify-content-between d-flex flex-wrap align-items-center">
                        <p class="mb-0 tsmall text-primary"><img width="30" height="30" class="me-2" />@item.Username</p>
                        <p class="mb-0 tspecial">score: @item.Score</p>
                        <p class="mb-0 tsmall text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="black" class="bi bi-github" viewBox="0 0 16 16">
                                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
                            </svg>
                            <span>
                                перейти на GitHub
                            </span>
                        </p>
                        <p class="mb-0 tsmall text-secondary">2020.09.01</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>