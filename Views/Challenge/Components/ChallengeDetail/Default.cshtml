@model Project.Models.Challenge

<div class="challenge__card mb-2 border rounded col-12 d-flex bg-white">
    <div class="col-6">
        <div class="p-2 ps-3">
            <h4>
                <b>@Model.Name</b>
                <span class="text-warning fs-6"><i>@Model.Level.Name</i></span>
            </h4>
            <p>
                @Model.Description
            </p>
            <p class="mb-0">return <b class="text-danger fs-6">Int</b></p>
            <p class="text-muted">tags tags tags tags</p>
            <div class="d-flex">
                <span>Лайков: 00</span>
                <span class="ms-2">Решений: @Model.Solutions.Count()</span>
                <span class="ms-2">Не справилось: @Model.UsersWhoUnlocked.Count()</span>
            </div>
        </div>
    </div>
    <div class="col-6 align-items-start d-flex">
        <div class="me-4 m-2 col-12">
            <div class="p-2 challenge__code position-relative rounded border-bottom">
<pre data-enlighter-language="less" class="pb-0 mb-0 position-absolute">
    @Model.Tests.First().TestContent
</pre>
            </div>
            <div class="p-2 col-12 d-flex justify-content-between">
                <div>
                    <p class="mb-0 text-danger"><b>Score</b></p>
                </div>
                <div class="d-flex">
                    <img src="#" height="25" width="25" />
                    <p class="mb-0">
                        @Model.Author.Username <span class="text-muted">@Model.DateCreated</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>